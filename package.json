{
  "name": "kafka-connect-admin",
  "displayName": "Connect Admin",
  "version": "0.0.1",
  "categories": [
    "Data Science",
    "Other"
  ],
  "engines": {
    "vscode": "^1.103.0",
    "code-server": "^4.0.0"
  },
  "publisher": "IuliusHutuleac",
  "main": "out/extension.js",
  "activationEvents": [
    "onCommand:connectAdmin.hello",
    "onCommand:connectAdmin.addConnection",
    "onCommand:connectAdmin.editConnection",
    "onCommand:connectAdmin.removeConnection",
    "onCommand:connectAdmin.testConnection",
    "onCommand:connectAdmin.refreshConnections",
    "onCommand:connectAdmin.connector.pause",
    "onCommand:connectAdmin.connector.resume",
    "onCommand:connectAdmin.connector.showOffsets",
    "onView:connectAdmin.connections"
  ],
  "contributes": {
    "commands": [
      {
        "command": "connectAdmin.hello",
        "title": "Hello"
      },
      {
        "command": "connectAdmin.openEditConnection",
        "title": "Open Edit Connection"
      },
      {
        "command": "connectAdmin.openConnectionManager",
        "title": "Open Connection Manager"
      },
      {
        "command": "connectAdmin.copySchemaVersion",
        "title": "Copy Schema Version"
      },
      {
        "command": "connectAdmin.pasteSchemaVersion",
        "title": "Paste Schema Version"
      },
      {
        "command": "connectAdmin.addConnection",
        "title": "Add Connection"
      },
      {
        "command": "connectAdmin.editConnection",
        "title": "Edit Connection"
      },
      {
        "command": "connectAdmin.removeConnection",
        "title": "Remove Connection"
      },
      {
        "command": "connectAdmin.testConnection",
        "title": "Test Connection"
      },
      {
        "command": "connectAdmin.refreshConnections",
        "title": "Refresh"
      },
      {
        "command": "connectAdmin.connector.pause",
        "title": "Pause Connector"
      },
      {
        "command": "connectAdmin.connector.resume",
        "title": "Resume Connector"
      },
      {
        "command": "connectAdmin.connector.showOffsets",
        "title": "Show Offsets"
      },
      {
        "command": "connectAdmin.copySchema",
        "title": "Copy Schema"
      },
      {
        "command": "connectAdmin.pasteSchema",
        "title": "Paste Schema"
      },
      {
        "command": "connectAdmin.pasteSchemaToConnection",
        "title": "Paste Schema to Connection"
      },
      {
        "command": "connectAdmin.testOfficialClient",
        "title": "Test Official Client"
      },
      {
        "command": "connectAdmin.deleteSchemaSubject",
        "title": "Delete Subject"
      },
      {
        "command": "connectAdmin.deleteSchemaVersion",
        "title": "Delete Version"
      },
      {
        "command": "connectAdmin.deleteConnector",
        "title": "Delete Connector"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "connectAdmin.connections",
          "name": "Connect Admin",
          "icon": "images/icon.svg"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "when": "view == connectAdmin.connections && viewItem == connection",
          "command": "connectAdmin.editConnection",
          "group": "1_modify"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == connection",
          "command": "connectAdmin.testConnection",
          "group": "2_test"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == connection",
          "command": "connectAdmin.removeConnection",
          "group": "9_delete"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == connection.schemaRegistry",
          "command": "connectAdmin.pasteSchemaToConnection",
          "group": "3_clipboard"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == connection.schemaRegistry",
          "command": "connectAdmin.testOfficialClient",
          "group": "2_test"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == schemaSubject",
          "command": "connectAdmin.copySchema",
          "group": "3_clipboard"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == schemaSubject",
          "command": "connectAdmin.pasteSchema",
          "group": "3_clipboard"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == schemaSubject",
          "command": "connectAdmin.deleteSchemaSubject",
          "group": "9_delete"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == schemaVersion",
          "command": "connectAdmin.copySchemaVersion",
          "group": "3_clipboard"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == schemaVersion",
          "command": "connectAdmin.deleteSchemaVersion",
          "group": "9_delete"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == connector",
          "command": "connectAdmin.connector.pause",
          "group": "1_modify"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == connector",
          "command": "connectAdmin.connector.resume",
          "group": "1_modify"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == connector",
          "command": "connectAdmin.connector.showOffsets",
          "group": "2_view"
        },
        {
          "when": "view == connectAdmin.connections && viewItem == connector",
          "command": "connectAdmin.deleteConnector",
          "group": "9_delete"
        },
        {
          "when": "view == connectAdmin.connections",
          "command": "connectAdmin.refreshConnections",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "when": "view == connectAdmin.connections",
          "command": "connectAdmin.openConnectionManager",
          "group": "navigation"
        },
        {
          "when": "view == connectAdmin.connections",
          "command": "connectAdmin.refreshConnections",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Connect Admin",
      "properties": {
        "connectAdmin.connections": {
          "type": "array",
          "default": [],
          "description": "Kafka Connect and Schema Registry connections",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the connection"
              },
              "name": {
                "type": "string",
                "description": "Display name for the connection"
              },
              "url": {
                "type": "string",
                "description": "Base URL for the connection"
              },
              "type": {
                "type": "string",
                "enum": ["connect", "schema-registry"],
                "description": "Type of connection"
              },
              "authType": {
                "type": "string",
                "enum": ["none", "basic", "bearer"],
                "description": "Authentication type"
              },
              "username": {
                "type": "string",
                "description": "Username for basic authentication"
              },
              "password": {
                "type": "string",
                "description": "Password/token stored as base64. Note: Base64 is encoding, not encryption - anyone with file access can decode this."
              }
            },
            "required": ["id", "name", "url", "type"]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "test": "jest --config jest.config.js --runInBand",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@confluentinc/schemaregistry": "^1.4.1",
    "axios": "^1.4.0"
  }
}
